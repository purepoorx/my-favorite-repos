<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/import_rule_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="剪贴板检测到搜索引擎规则，是否立即导入？"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_margin="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/import_rule_btn"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_layer_red"
            android:paddingStart="5dp"
            android:textColor="@color/black_666"
            android:paddingEnd="5dp"
            android:text="同时导入广告拦截规则" />

        <Button
            android:id="@+id/not_import_rule_btn"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_layer"
            android:paddingStart="5dp"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingEnd="5dp"
            android:textColor="@color/black_666"
            android:text="不导入拦截规则" />
    </LinearLayout>

</LinearLayout>
