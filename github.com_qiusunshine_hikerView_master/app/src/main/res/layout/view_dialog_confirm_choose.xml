<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/download_add_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="start"
        android:text="文件名称（不支持后缀）"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/download_add_last"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_layer_red"
            android:text="内置下载器" />

        <Button
            android:id="@+id/download_add_others"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_layer"
            android:text="其它下载器" />
    </LinearLayout>

</LinearLayout>
