<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <com.example.hikerview.ui.view.RelativeListenLayout
        android:id="@+id/web_view_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

    </com.example.hikerview.ui.view.RelativeListenLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/left_icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="-60dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="8dp">

        <ImageView
            android:id="@+id/left_icon_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/left_circle" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/right_icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="-60dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="8dp">

        <ImageView
            android:id="@+id/right_icon_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/right_circle" />
    </androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/home"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="bottom|center_horizontal"
        android:padding="6dp"
        android:scaleType="centerInside"
        android:src="@drawable/home_solid"
        android:visibility="invisible" />

    <com.example.hikerview.ui.view.RelativeListenLayout
        android:id="@+id/bottom_bar_bg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@drawable/shape_top_border"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/bottom_bar_home_card"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/bottom_bar_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/ripple_white"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/home" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/bottom_bar_refresh_card"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="18dp"
            android:layout_toEndOf="@id/bottom_bar_home_card"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/bottom_bar_refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/ripple_white"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/back" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/bottom_bar_menu_card"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/bottom_bar_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/ripple_white"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/menu_web" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/bottom_bar_muti_card"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="18dp"
            android:layout_toStartOf="@id/bottom_bar_menu_card"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/bottom_bar_muti"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/ripple_white"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/discory_1" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/bottom_bar_title_card"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/bottom_bar_muti_card"
            android:layout_toEndOf="@id/bottom_bar_refresh_card"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray_rice">

                <androidx.cardview.widget.CardView
                    android:id="@+id/bottom_bar_xiu_tan_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:minWidth="24dp"
                    android:visibility="gone"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/bottom_bar_xiu_tan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ripple_red"
                        android:gravity="center"
                        android:lines="1"
                        android:maxLines="1"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/bottom_bar_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@id/bottom_bar_xiu_tan_bg"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:paddingStart="5dp"
                    android:lines="1"
                    android:maxLines="1" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </com.example.hikerview.ui.view.RelativeListenLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:id="@+id/web_bottom_recycler_view_bg"
        android:layout_gravity="center_horizontal|bottom"
        android:visibility="invisible"
        android:layout_marginBottom="55dp">
            <TextView
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:id="@+id/bottom_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="X"
                android:background="@drawable/button_layer_black"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_toStartOf="@id/bottom_clear"
            android:id="@+id/web_bottom_recycler_view"
            android:layout_width="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_height="@dimen/toolbar_height"/>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/toast_bg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/toolbar_height"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="90dp"
        android:visibility="invisible"
        app:cardCornerRadius="22dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/black_666"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/toast_img"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:clickable="false"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_action_play_green" />

            <TextView
                android:id="@+id/toast_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:text="嗅探到视频或音乐"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/toast_btn"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@color/greenAction"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="查看"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/snack_bar_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="50dp" />

    <RelativeLayout
        android:id="@+id/search_bg"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="50dp"
        android:background="@color/white"
        android:visibility="gone">

        <ImageView
            android:id="@+id/search_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:padding="4dp"
            android:src="@drawable/ic_close" />

        <ImageView
            android:id="@+id/search_forward"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/search_close"
            android:padding="4dp"
            android:src="@drawable/ic_forward" />

        <ImageView
            android:id="@+id/search_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/search_forward"
            android:padding="4dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/search_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/search_back"
            android:gravity="center_vertical"
            android:text="0/0"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/search_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@id/search_count"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="页内查找"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/black_666"
            android:textCursorDrawable="@drawable/et_cursor"
            android:textSize="14sp" />
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/progress_image_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/avd_progress_indeterminate_horizontal" />

    <ViewStub
        android:id="@+id/layout_web_view_bottom_bar_stub"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout="@layout/view_main_bottom" />

    <ViewStub
        android:id="@+id/layout_web_view_debug_stub"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_gravity="bottom"
        android:layout="@layout/layout_web_view_debug" />
</FrameLayout>