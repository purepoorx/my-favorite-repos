<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/result_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bottom_split"
    android:paddingTop="12dp"
    android:paddingBottom="1.2dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_result_img_bg"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="10dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="5dp">

        <ImageView
            android:id="@+id/item_reult_img"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:background="@drawable/ripple_white"
            android:scaleType="centerCrop"
            android:src="@color/gray_rice" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/movie_one_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@id/item_result_img_bg"
        android:ellipsize="end"
        android:maxLines="3"
        android:minHeight="40dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingBottom="4dp"
        android:textColor="@color/blackText"
        android:textSize="16.5sp"/>

    <TextView
        android:id="@+id/movie_one_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_one_title"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@id/item_result_img_bg"
        android:ellipsize="end"
        android:maxLines="3"
        android:padding="4dp" />

</RelativeLayout>