<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_ad_bg"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@drawable/shape_bottom_border"
    android:paddingStart="10dp"
    android:paddingTop="3dp"
    android:paddingEnd="10dp"
    android:gravity="center_vertical"
    android:paddingBottom="3dp">

    <TextView
        android:id="@+id/item_ad_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:maxLines="1"
        android:text="删除"
        android:textColor="@color/greenAction"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/item_ad_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:maxLines="1"
        android:textColor="@color/black_666"
        android:ellipsize="end"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/item_ad_delete"
        android:textSize="16sp" />
</RelativeLayout>