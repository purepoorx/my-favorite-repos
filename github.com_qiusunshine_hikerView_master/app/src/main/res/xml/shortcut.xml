<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:enabled="true"
        android:icon="@mipmap/collection"
        android:shortcutDisabledMessage="@string/web_search"
        android:shortcutId="webSearch"
        android:shortcutLongLabel="@string/web_search"
        android:shortcutShortLabel="@string/web_search">

        <categories android:name="android.shortcut.conversation" />
        <intent
            android:action="android.intent.action.VIEW"
            android:data="hiker://webSearch"
            android:targetClass="com.example.hikerview.ui.home.MainActivity"
            android:targetPackage="com.example.hikerview" />
    </shortcut>
    <shortcut
        android:enabled="true"
        android:icon="@mipmap/history"
        android:shortcutDisabledMessage="@string/fast_search"
