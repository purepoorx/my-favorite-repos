            android:action="android.intent.action.VIEW"
            android:data="hiker://search"
            android:targetClass="com.example.hikerview.ui.home.MainActivity"
            android:targetPackage="com.example.hikerview" />
    </shortcut>
    <shortcut
        android:enabled="true"
        android:icon="@mipmap/bookmark"
        android:shortcutDisabledMessage="@string/my_bookmark"
        android:shortcutId="bookmark"
        android:shortcutLongLabel="@string/my_bookmark"
        android:shortcutShortLabel="@string/my_bookmark">

        <categories android:name="android.shortcut.conversation" />
        <intent
            android:action="android.intent.action.VIEW"
            android:data="hiker://bookmark"
            android:targetClass="com.example.hikerview.ui.home.MainActivity"
            android:targetPackage="com.example.hikerview" />
    </shortcut>
</shortcuts>